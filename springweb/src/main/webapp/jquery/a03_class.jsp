		$("h3").click(function(){
			$(this).addClass("chH3")
			$("h2").removeClass("addWidth")
		})
		$("h1").click(function(){
			$("h2").toggleClass("addWidth")
			$("h3").toggleClass("chH3")
		})
	});
</script>
