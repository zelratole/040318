<script type="text/javascript">
	$(document).ready(function(){
		$(":checkbox").click(function(){
			console.log("체크한 갯수:" +$(":checked").length )
			// each 구문을 사용하여 출력 처리
			// $(배열형객체).each(function(index, obj){ }) 
			//   	index :인덱스 번호,   obj : 배열안에 있는 단위 객체
			var ckMenu = ""
			$(":checked").each(function(idx, obj){
				ckMenu += $(obj).val()+", "
			})
			$("p").text(ckMenu)
		})
	});
</script>
